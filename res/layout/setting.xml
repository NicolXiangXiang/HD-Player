<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="281px"
    android:gravity="center_vertical"
    android:visibility="gone" >

    <ImageView
        android:layout_width="839px"
        android:layout_height="553px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/dialog" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="504px"
        android:layout_height="86px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="263px"
        android:layout_marginTop="244px"
        android:background="@drawable/textbox"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px" >

        <EditText
            android:id="@+id/EditText03"
            android:layout_width="30px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/EditText02"
            android:layout_width="30px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="30px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="30px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#fff" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="233px"
        android:layout_height="102px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ok" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="233px"
        android:layout_height="102px"
       android:layout_alignParentLeft="true"
        android:layout_marginLeft="500px"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="18dp"
        android:background="@drawable/cancel" />

</RelativeLayout>